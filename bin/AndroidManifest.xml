<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.informationworks.quizaptandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.informationworks.quizaptandroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.Login"
            android:label="@string/title_activity_login"
            android:parentActivityName="in.informationworks.quizaptandroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.informationworks.quizaptandroid.MainActivity" />
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.ChooseLoginSignup"
            android:label="@string/title_activity_choose_login_signup" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.QuizzesList"
            android:label="@string/title_activity_quizzes_list" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.SelectedQuiz"
            android:label="@string/title_activity_selected_quiz" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.LoadQuestion"
            android:label="@string/title_activity_load_question" >
        </activity>
        <activity
            android:name="in.informationworks.quizaptandroid.ScoreBoard"
            android:label="@string/title_activity_score_board" >
        </activity>
    </application>

</manifest>